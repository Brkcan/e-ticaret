@using Entities

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Shop Homepage - Start Bootstrap Template</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/shop-homepage.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    
</head>
<body>


    @{ 
        kullanici user = null;
        if(Session["login"] != null)
        {
            user = Session["login"] as kullanici;
        }
    }


    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Menü</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home/Index">TAKI VE MUCEVHER</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @if (user != null)
                    {
                        
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                               aria-expanded="false">
                                <span class="glyphicon glyphicon-wrench"></span>Yönetim<span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                
                                <li role="separator" class="divider"></li>
                                <li> <a href="/SepeteEkle/Index"><span class="glyphicon glyphicon-th-list"></span>Urunlerim</a></li>
                                <li><a href="/Sepet/Begendiklerim"><span class="glyphicon glyphicon-heart"></span>Begendiklerim</a></li>
                                <li role="separator" class="divider"></li>
                                
                                @if (user.KullaniciAdminMi)
                                {
                                    <li> <a href="/SepeteEkle/Create"><span class="glyphicon glyphicon-plus"></span>Sepete Mal ekle</a></li>
                                    <li><a href="/Category/Create"><span class="glyphicon glyphicon-plus"></span>Kategori Ekle</a></li>
                                    <li> <a href="/Category/Index"><span class="glyphicon glyphicon-th-list"></span>Kategori</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="/Kullanici/Index"><span class="glyphicon glyphicon-th-list"></span>Kullanıcılar</a></li>
                                    <li><a href="/Kullanici/Create"><span class="glyphicon glyphicon-plus"></span>Kullanıcı Ekle</a></li>
                                }
                            </ul> 
                        </li>
                    }
                  
                    <li>
                        <a href="/Home/MostLiked">
                        <span class="glyphicon glyphicon-star-empty"></span>En Beğenilenler</a>
                    </li>
                    <li>                      
                        <a href="/Home/Index">
                        <span class="glyphicon glyphicon-calendar"></span>Son Eklenenler</a>
                    </li>
                    <li>
                        <a href="/Home/About">
                        <span class="glyphicon glyphicon-info-sign "></span> Hakkımızda</a>
                    </li>
                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                  
    @if (user == null)


    {

        <li>
            <a href="/Home/Login">
                <span class="glyphicon glyphicon-log-in"></span>Giriş
            </a>
        </li>
                    <li>
                        <a href="/Home/Register">
                            <span class="glyphicon glyphicon-user"></span> Üye Ol
                        </a>
                    </li>
    }
              
    else
    {
                 
                    <li class="dropdown">
                        <a href="/Home/ShowProfile" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <span class="glyphicon glyphicon-user"></span>@user.KullaniciAdi <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/Home/ShowProfile"><span class="glyphicon glyphicon-user"></span>Profili Göster</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/Home/EditProfile"><span class="glyphicon glyphicon-edit"></span>Profili Göster</a></li>
                            <li><a href="/Home/DeleteProfile" onclick="return confirm("Hesabı silme la");"><span class="glyphicon glyphicon-trash"></span>Profili sil</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/Home/Logout">
                            <span class="glyphicon glyphicon-log-out"></span> Çıkış
                        </a>
                    </li>
                    }
                    
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <div class="container">
        <hr>
        <footer>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>Copyright &copy; <strong>BURAK&ONUR</strong></p>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>
