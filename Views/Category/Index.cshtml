@model IEnumerable<Entities.Kategori>

@{
    ViewBag.Title = "Kategoriler";
}
<div class="row">
    <div  class="col-md-10 col-md-offset-1">
        <h2>Kategoriler</h2>
        <hr />
    </div>

</div>

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p>
            
            <a href="/Category/Create" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span>Ekle</a>
                                                                   
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Aciklama)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OlusturulduguZaman)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DuzenlendigiTarih)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DuzenleyenKullanici)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aciklama)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OlusturulduguZaman)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DuzenlendigiTarih)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DuzenleyenKullanici)
                    </td>
                    <td>
                        <a href="/Category/Edit/@item.Id" class="btn btn-warning" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>

                        <a href="/Category/Details/@item.Id" class="btn btn-info" title="Details"><span class="glyphicon glyphicon-search"></span></a>

                        <a href="/Category/Delete/@item.Id" class="btn btn-danger" title="Delete"><span class="glyphicon glyphicon-trash"></span></a>
                   
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

